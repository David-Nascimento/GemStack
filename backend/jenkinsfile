pipeline {
    agent {
        docker {
            image 'ruby'
        }
    }

    stages {
        stage('Build') {
            steps{
                echo "Compilando e/ou baixando dependencias"
                sh 'ls'
                sh 'bundle install'
            }
        }

        stage('Test') {
            steps {
                echo 'Executando tests'
                sh 'rspec -fd'
            }
        }

        stage('UAT') {
            steps {
                echo 'Teste de aceitacao'
            }
        }

        stage('Prod') {
            steps {
                echo 'App pronto para producao!'
            }
        }
        
    }
}